<div class="form-row">
  <div class="form-item">
    <label>First Name</label>
    <input type="text" name="firstName" value="<%=req.body.firstName %>" />
  </div>
  <div class="form-item">
    <label>Last Name</label>
    <input type="text" name="lastName" value="<%=req.body.lastName %>" />
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Address</label>
    <input type="text" name="address" value="<%=req.body.address %>" />
  </div>
  <div class="form-item">
    <label>Phone Number</label>
    <input type="tel" name="phone" value="<%=req.body.phone %>" />
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Password</label>
    <input type="password" name="password" />
    <label>Profile Pic</label>
    <input type="file" name="profilePic" class="profile-pic-holder filepond" />
  </div>
  <div class="form-item">
    <label>Desired Help Date</label>
    <input
      type="date"
      name="preferredDate"
      value="<%= req.body.preferredDate %>"
    />
    <label>Desired Help Description</label>
    <textarea name="helpDesired"><%= req.body.helpDesired %></textarea>
  </div>
  <input type="hidden" id="role" name="role" value="H" />
</div>
